{
  "name": "task-blaster-monorepo",
  "version": "0.1.0",
  "description": "A Kanban style orchestration app monorepo with Fastify API and React client",
  "private": true,
  "workspaces": [
    "api",
    "client"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=api",
    "dev:client": "npm run dev --workspace=client",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "build": "npm run build --workspace=client",
    "docker:up": "docker-compose -f api/docker-compose.yml up -d",
    "docker:down": "docker-compose -f api/docker-compose.yml down",
    "db:migrate": "npm run db:migrate --workspace=api",
    "db:seed": "npm run db:seed --workspace=api",
    "db:reset": "npm run db:reset --workspace=api"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelwitz/task-blaster.git"
  },
  "keywords": [
    "agentic",
    "kanban",
    "monorepo"
  ],
  "author": "Michael Woytowitz",
  "license": "ISC"
}
